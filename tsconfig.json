{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@internalComponents/*": ["src/components/internalComponents/*"],
      "@internalComponents/*": ["./app/_components/*"],
      "@components/*": ["./app/_sections/*"],
      "@lib/*": ["./app/_lib/*"],
      "@constant/*": ["./app/_constant/*"],
      "@providers/*": ["./app/_providers/*"],
      "@icons": ["./src/assets/icons/index"],
      "@illustrations": ["./src/assets/illustrations/index"],
      "@wireframes": ["./src/assets/wireframes/index"],
      "@images": ["./src/assets/images/index"],
      "@schema/*": ["./src/schema/*"],
      "@stores/*": ["./src/stores/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@builder/*": ["./app/(protected)/builder/*"],
      "@workspace/*": ["./app/(protected)/workspace/*"],
      "@containers/*": ["./src/containers/*"],
      "@dialogs/*": ["./src/dialogs/*"],
      "@utils/*": ["./src/utils/*"],
      "@mock/*": ["./src/mock/*"],
      "@builderComponents/*": ["./src/components/*"],
      "@customTypes/*": ["./src/types/*"],
      "@enums/*": ["./src/enums/*"],
      "@/*": ["./app/*"]
    }
  },
  "include": ["main/**/*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules"]
}
